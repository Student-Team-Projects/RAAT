<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.gaurav.avnc.viewmodel.HomeViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/discovered_rv"
            style="@style/ServerList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_discovery" />

        <TextView
            style="@style/TipView"
            android:text="@string/tip_discovery"
            android:visibility="gone"
            app:isVisible="@{viewModel.pref.appearance.showTips &amp;&amp; !viewModel.discovery.isRunning &amp;&amp; viewModel.discovery.servers.empty}"
            tools:visibility="visible" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/margin_normal"
            android:animateLayoutChanges="true">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/desc_discovery_btn"
                android:onClick="@{()-> viewModel.startDiscovery()}"
                android:src="@drawable/ic_refresh"
                app:isInVisible="@{viewModel.discovery.isRunning}" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/desc_discovery_running"
                app:isInVisible="@{!viewModel.discovery.isRunning}" />
        </FrameLayout>
    </FrameLayout>
</layout>