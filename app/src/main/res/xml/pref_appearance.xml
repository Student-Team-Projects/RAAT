<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    app:title="@string/pref_ui">

    <ListPreference
        app:defaultValue="system"
        app:entries="@array/theme_entries"
        app:entryValues="@array/theme_values"
        app:key="theme"
        app:title="@string/pref_theme"
        app:useSimpleSummaryProvider="true" />

    <SwitchPreference
        app:defaultValue="true"
        app:key="show_tips"
        app:title="@string/pref_show_tips" />

    <SwitchPreference
        app:defaultValue="false"
        app:key="prefer_advanced_editor"
        app:summary="@string/pref_prefer_advanced_editor_summary"
        app:title="@string/pref_prefer_advanced_editor" />

</PreferenceScreen>